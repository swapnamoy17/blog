
<%- include("partials/header"); -%>
    <h1>Home</h1>
    <p> <%= startingContent %> </p>


  <%  posts.forEach(function(post){ %>

    <h1><%=post.title%></h1>
    <p>
    <%=post.content.substring(0, 100) + " ..."%>
    <a href="/posts/<%=post.title%>">Read More</a>
    <form class="" action="/delete" method="post">
      <div class="item">
        <button type="submit" name="delete" value=<%=post.title%>>Delete</button>
      </div>
    </form>
    </p>


    <% }) %>

  <a class="btn btn-primary" href="/compose" role="button">Compose</a>

<%- include("partials/footer"); -%>
